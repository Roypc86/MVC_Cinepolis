@model WebApp_Cinepolis.Models.Horario

@{
    ViewBag.Title = "Edición";
}

<h2>Edición del horario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="edit-page">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                    @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" , @Value = @Model.Fecha.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hora_inicial, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hora_inicial, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_inicial, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hora_final, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hora_final, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_final, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><strong>Cine asociado</strong></span>
            <div class="col-md-10">
                @Html.DropDownList("CineId", null, htmlAttributes: new { @class = "form-control", @onchange = "updateDropdownSalas()", @id = "DropdownCinesId"})
                @Html.ValidationMessageFor(model => model.CineId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><strong>Sala</strong></span>
            <div class="col-md-10">
                @Html.DropDownList("SalaId", null, htmlAttributes: new { @class = "form-control", @id = "DropdownSalasId" })
                @Html.ValidationMessageFor(model => model.SalaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><strong>Película</strong></span>
            <div class="col-md-10">
                @Html.DropDownList("PeliculaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PeliculaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" id="btn-guardar" />
            </div>
        </div>
    </div>
}

<div>
    <a onclick="history.back()" href="#">Atrás</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/HorariosScript.js")
}
